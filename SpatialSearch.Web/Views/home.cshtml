@using SpatialSearch.Core.Models.ViewModels
@using SpatialSearch.Core.PublishedModels
@using SpatialSearch.Core.Models
@inherits UmbracoViewPage<HomeViewModel>
@{
    Layout = "_layout.cshtml";
}
<div class="header">
    <img class="header_image" src="@Model.HeaderImage?.Url()" />
    <div class="header_text_container">
        <h1>@Model.Header</h1>
        <h2>@Model.SubHeader</h2>
    </div>
</div>

@await Html.PartialAsync("~/Views/Partials/Forms/InvalidForm.cshtml")

<div class="two-column-container">
    <div class="column">
        <h3>Enter a postcode and a distance (km)</h3>
        @await Html.PartialAsync("~/Views/Partials/Forms/SearchPostcodeForm.cshtml")
    </div>
    <div class="column">
        <h3>Add postcode to database</h3>
        @await Html.PartialAsync("~/Views/Partials/Forms/AddPostcodeToDatabaseForm.cshtml")
        <h3>Add random postcodes to database</h3>
        @await Html.PartialAsync("~/Views/Partials/Forms/AddRandomPostcodesToDatabaseForm.cshtml")
    </div>
</div>

@await Html.PartialAsync("~/Views/Partials/Components/PostcodeResultsMap.cshtml")
@await Html.PartialAsync("~/Views/Partials/Components/PostcodeResultsList.cshtml")
